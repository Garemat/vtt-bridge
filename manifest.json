{
  "manifest_version": 2,
  "name": "VTT Bridge",
  "version": "1.0",
  "description": "Connect Dungeon Master's Vault to Roll20.",
  "content_scripts": [
    {
      "matches": ["*://www.dungeonmastersvault.com/pages/dnd/5e/characters/*"],
      "js": ["dist/dmv.js"]
    },
    {
      "matches": ["*://app.roll20.net/*"],
      "js": ["dist/roll20.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  }
}
