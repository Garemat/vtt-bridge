{
  "manifest_version": 2,
  "name": "VTT Bridge",
  "version": "0.1.0",
  "description": "A browser extension that connects Dungeon Master's Vault to Roll20.",
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.dungeonmastersvault.com/pages/dnd/5e/characters/*"],
      "js": ["dist/dmv.js"]
    },
    {
      "matches": ["*://app.roll20.net/editor*"],
      "js": ["dist/roll20.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": ["tabs"]
}
