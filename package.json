{
  "name": "vtt-bridge",
  "description": "A browser extension that connects Dungeon Master's Vault to Roll20.",
  "author": "Avery Crespi",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.2",
    "web-ext": "^4.2.0"
  },
  "scripts": {
    "build": "parcel build --no-source-maps src/scripts/* src/styles/*",
    "watch": "parcel watch --no-source-maps src/scripts/* src/styles/*",
    "clean": "rm -rf dist/*",
    "rebuild": "yarn clean && yarn build",
    "firefox:build": "yarn rebuild && web-ext lint --warnings-as-errors && web-ext build --overwrite-dest",
    "firefox:run": "web-ext run --browser-console --start-url https://www.dungeonmastersvault.com/pages/dnd/5e/characters/17592216164628?frame=true --start-url https://app.roll20.net"
  }
}
