{
  "name": "vtt-bridge",
  "description": "A browser extension that connects Dungeon Master's Vault to Roll20.",
  "author": "Avery Crespi",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.2",
    "web-ext": "^4.2.0"
  },
  "scripts": {
    "build": "parcel build --no-source-maps src/scripts/* -d dist",
    "clean": "rm -r dist/* web-ext-artifacts/*",
    "watch": "parcel watch --no-source-maps src/scripts/* -d dist",
    "firefox:build": "yarn build && web-ext build",
    "firefox:lint": "yarn build && web-ext lint",
    "firefox:run": "web-ext run --browser-console --start-url https://www.dungeonmastersvault.com --start-url https://app.roll20.net"
  }
}
